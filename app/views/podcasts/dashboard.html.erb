<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>Seth's Podcast Dashboard</h1>
    </div>
  </div>
  <div id="links">
    <div class="wrapper_skinny">
      <ul id="menu">
        <li class="list_menu"><%= link_to "Episodes", root_path %></li>
        <li class="list_menu"><%= link_to "New Episode", new_podcast_episode_path(@podcast), class: "current" %></li>
        <li class="list_menu"><%= link_to "Account Settings", edit_podcast_registration_path%></li>
        <li class="list_menu"><%= link_to "View Podcast", podcast_path(current_podcast) %></li>
      </ul>
    </div>
  </div>

  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="episode">
        <%= @episodes.each do |episode| %>
            <li class="episode_list">
              <div class="episode_thumbnail">
                <a href="episode.html">
                  <img src="images/richardp.jpeg" alt="Richard Pryor" />
                </a>
              </div>
              <div class="episode_overview">
                <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
                <p class="rich_description"><%= truncate(episode.description, length: 100) %></p>
                <div class="authorized_links">
                  <%= link_to "Edit", edit_podcast_episode_path(@podcast, episode) %>
                  <%= link_to "Delete", podcast_episode_path(@podcast, episode), method: :delete, data: {confirm: "Are you sure?"} %>
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
