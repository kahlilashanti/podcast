<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @podcast.title %></h1>
      <p class="description"><%= @podcast.description %></p>
    </div>
    <% unless @podcast.itunes.blank? %>
    <!-- <button type="button" class="btn btn-success"><a href="<%= @podcast.itunes %>" class="subscribe_link">iTunes</a></button> -->
    <% end %>
  </div>
  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= link_to @podcast.title, podcast_path(@podcast) %>
      <span>/</span>
      <%= @episode.title %>
    <% end %>
  </div>

  <div id="episode_content">
    <div class="wrapper_skinny">
    <%= image_tag @episode.episode_thumbnail.url(:medium), class: "current_episode_thumbnail" %>
      <h2><%= @episode.title %></h2>
      <p class="description"><%= @episode.description %></p>
    </div>
  </div>


  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="episode">
        <%= @episodes.each do |episode| %>
            <li class="episode_list">
              <div class="episode_thumbnail">
                <a href="episode.html">
                  <%= image_tag episode.episode_thumbnail.url(:medium)%>
                </a>
              </div>
              <div class="episode_overview">
                <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
                <p class="rich_description"><%= truncate(episode.description, length: 100) %></p>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
